<div class="row clearfix" ng-controller="app.views.cajas.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    @L("Cajas")
                </h2>
                <ul class="header-dropdown m-r--5">
                    <i class="fa fa-spin fa-spinner" ng-if="vm.isTableLoading"></i>
                    <li class="dropdown">
                        <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            <i class="material-icons">more_vert</i>
                        </a>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);" class="waves-effect waves-block()" ng-click="vm.refresh();"><i class="material-icons">refresh</i> @L("Refresh")</a></li>
                        </ul>
                    </li>
                </ul>
                <div id='FiltersGroup'>

                </div>
                <input type='button' value='Agregar Filtro' id='addFilter'>
                <input type='button' value='Remover Filtro' id='removeFilter'>
                <input type='button' value='Ejecutar' id='executeFilter'>
            </div>
            <div class="body table-responsive">

                <table class="table table-hover table-striped">
                    <thead>
                        <tr>
                            <th style="text-align:center">Codigo</th>
                            <th>Nombre</th>
                            <th>Descripcion</th>                            
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="vrecord in vm.registros">
                            <td>{{vrecord.codigo}}</td>
                            <td>{{vrecord.nombre}}</td>
                            <td>{{vrecord.descripcion}}</td>                            
                            <td class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">menu</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.openModalForEdit(vrecord)"><i class="material-icons">create</i>Modificar</a></li>
                                    <li><a href="javascript:void(0);" class="waves-effect waves-block" ng-click="vm.openModalForDelete(vrecord)"><i class="material-icons">delete_sweep</i>Eliminar</a></li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!-- ******************************************************** -->

                <button type="button" data-toggle="modal" class="btn btn-primary btn-circle waves-effect waves-circle waves-float pull-right" ng-click="vm.openModalForNew()">
                    <i class="material-icons">add</i>
                </button>
            </div>
        </div>
    </div>

</div>